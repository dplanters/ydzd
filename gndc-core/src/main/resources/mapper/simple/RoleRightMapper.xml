<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gndc.core.mapper.simple.RoleRightMapper">

    <select id="selectRightListByRoleId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from dc_role_right
        where role_id = #{roleId,jdbcType=INTEGER}
    </select>

    <insert id="batchInsert" parameterType="list">
        insert into dc_role_right ( role_id, right_id , update_admin_id , create_time
        )
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId, jdbcType=INTEGER},
            #{item.rightId,jdbcType=INTEGER},
            #{item.updateAdminId,jdbcType=INTEGER},
            #{item.createTime,jdbcType=TIMESTAMP})
        </foreach>
    </insert>

    <delete id="batchDelete" parameterType="list">
        delete from dc_role_right where id in
        <foreach close=")" collection="list" item="item" open="(" separator=",">
            #{item.id, jdbcType=INTEGER}
        </foreach>
    </delete>

</mapper>